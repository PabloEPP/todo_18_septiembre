<h1>Tareas Dieciocheras</h1>
<div class= "container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col" >
          <div class = "card">
            <%= image_tag task.photo, class: 'card-img-top'%>
            <div class="body">
            <h5><%= task.name %></h5>
            <p><%= task.description %><p>
            <%= link_to "Completar tarea", task_todos_path(task), class: 'btn btn-success', method: :post %>
            </div>
          </div>
        </div>
      <% end %>
    <div class= "w-100"></div>
  <% end %>
</div>
</div>
